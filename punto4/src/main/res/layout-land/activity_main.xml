<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@color/tan"

    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="100dp"
        >


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="BIENVENIDO "
                    android:layout_marginLeft="50dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="40dp"
                    android:textColor="@color/sienna"
                    android:textStyle="bold"
                    />

                <RadioGroup
                    android:id="@+id/figuras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/circulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Círculo"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        />
                    <RadioButton
                        android:id="@+id/triangulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Triángulo"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        />
                    <RadioButton
                        android:id="@+id/cuadrado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuadrado"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        />
                    <RadioButton
                        android:id="@+id/rectangulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rectángulo"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        />

                </RadioGroup>
            </LinearLayout>
        </TableRow>

        <TableRow

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >
            <LinearLayout
                android:id="@+id/show_CoC"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/var"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:text="Radio: "
                    android:textStyle="bold"
                    android:textColor="@color/darkgoldenrod"
                    />
                <EditText
                    android:id="@+id/dataC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="vacio"
                    android:textColorHint="@color/whitesmoke"
                    android:textSize="30dp"
                    android:maxWidth="110dp"
                    android:inputType="numberDecimal"
                    />
            </LinearLayout>

        </TableRow>

        <TableRow

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >
            <LinearLayout
                android:id="@+id/show_ToR"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="20dp"
                        android:text="Base: "
                        android:textStyle="bold"
                        android:textColor="@color/darkgoldenrod"
                        />
                    <EditText
                        android:id="@+id/data1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="vacio"
                        android:maxWidth="100dp"
                        android:textColorHint="@color/whitesmoke"
                        android:textSize="30dp"
                        android:inputType="numberDecimal"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="20dp"
                        android:text="Altura: "
                        android:textStyle="bold"
                        android:textColor="@color/darkgoldenrod"
                        />
                    <EditText
                        android:id="@+id/data2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="vacio"
                        android:textColorHint="@color/whitesmoke"
                        android:textSize="30dp"
                        android:maxWidth="100dp"
                        android:inputType="numberDecimal"
                        />
                </LinearLayout>
            </LinearLayout>
        </TableRow>

        <TableRow

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                />
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >
            <Button
                android:id="@+id/bArea"
                android:visibility="visible"
                android:text=" AREA "
                android:textStyle="bold|italic"
                android:maxWidth="300dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="30dp"
                android:background="@color/darkgoldenrod"
                android:textColor="@color/beige"
                />
        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:id="@+id/show"
            android:visibility="invisible"
            >
            <TextView
                android:id="@+id/ver"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_height="100dp"
                android:layout_width="wrap_content"
                android:textSize="80dp"
                android:textColorHint="@color/mistyrose"
                android:maxWidth="300dp"
                android:maxHeight="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

        </TableRow>

    <TableRow

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >
        <TextView
            android:id="@+id/veer"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/beige"
            android:textSize="20dp"
            />
    </TableRow>

</TableLayout>

</ScrollView>